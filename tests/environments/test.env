# Test environment configuration
NODE_ENV=test
LOG_LEVEL=error

# EdgeGrid test configuration
EDGERC_PATH=./test/fixtures/.edgerc.test

# Test timeouts
TEST_TIMEOUT=30000
INTEGRATION_TEST_TIMEOUT=60000

# Mock API endpoints
MOCK_API_ENABLED=true
MOCK_API_DELAY=0

# Test customer configurations
TEST_CUSTOMER_DEFAULT=test-default
TEST_CUSTOMER_PRODUCTION=test-production
TEST_CUSTOMER_STAGING=test-staging

# Debug settings
DEBUG_TESTS=false
SHOW_TEST_ERRORS=false
VERBOSE_TEST_OUTPUT=false

# Coverage settings
COLLECT_COVERAGE=true
COVERAGE_THRESHOLD_BRANCHES=80
COVERAGE_THRESHOLD_FUNCTIONS=80
COVERAGE_THRESHOLD_LINES=85
COVERAGE_THRESHOLD_STATEMENTS=85