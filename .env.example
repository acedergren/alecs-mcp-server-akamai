# Akamai EdgeGrid Authentication
# These are required for connecting to Akamai APIs

# Client Secret from your .edgerc file
AKAMAI_CLIENT_SECRET="your-client-secret-here"

# Host (without https://)
AKAMAI_HOST="your-host.luna.akamaiapis.net"

# Access Token
AKAMAI_ACCESS_TOKEN="akab-your-access-token"

# Client Token
AKAMAI_CLIENT_TOKEN="akab-your-client-token"

# Account Switch Key (for managing multiple accounts)
# Format: "accountId:groupId" or "accountId:groupId%"
AKAMAI_ACCOUNT_KEY="1-ABC123:1-XYZ789"

# Optional: Set to 'test' for testing without real API calls
NODE_ENV="development"

# Optional: Enable debug logging
DEBUG="false"

# Optional: Enable verbose test output
VERBOSE_TESTS="false"