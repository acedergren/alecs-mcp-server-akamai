{
  "name": "alecs-mcp-server-akamai",
  "version": "1.2.0",
  "description": "An MCP (Model Context Protocol) server that enables management of Akamai through AI",
  "main": "dist/index.js",
  "bin": {
    "alecs": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.ts' --fix",
    "lint:check": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.{ts,json,md}'",
    "format:check": "prettier --check 'src/**/*.{ts,json,md}'",
    "typecheck": "tsc --noEmit",
    "demo:agents": "tsx examples/agent-demo.ts",
    "cleanup": "tsx src/agents/cleanup-agent.ts",
    "cleanup:dry": "tsx src/agents/cleanup-agent.ts --dry-run",
    "cleanup:interactive": "tsx src/agents/cleanup-agent.ts --interactive",
    "sbom": "./scripts/generate-sbom.sh",
    "licenses": "npx license-checker --summary",
    "audit": "npm audit"
  },
  "keywords": [
    "mcp",
    "akamai",
    "cdn",
    "dns",
    "edge-dns",
    "claude",
    "ai",
    "infrastructure",
    "edgegrid",
    "property-manager",
    "alecs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "akamai-edgegrid": "^3.4.0",
    "chokidar": "^4.0.3",
    "minimatch": "^10.0.3",
    "simple-git": "^3.28.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jest": "^27.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "EXAMPLES.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
