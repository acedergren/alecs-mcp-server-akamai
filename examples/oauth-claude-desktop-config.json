{
  "mcpServers": {
    "alecs-oauth": {
      "command": "node",
      "args": ["/home/alex/alecs-mcp-server-akamai/dist/index-oauth.js"],
      "env": {
        "EDGERC_PATH": "~/.edgerc",
        "AKAMAI_ACCOUNT_KEY": "1-ABCDEF",
        "OAUTH_ENABLED": "true",
        "OAUTH_INTROSPECTION_ENDPOINT": "https://auth.akamai.com/oauth/introspect",
        "OAUTH_CLIENT_ID": "your-oauth-client-id",
        "OAUTH_CLIENT_SECRET": "your-oauth-client-secret",
        "OAUTH_PUBLIC_TOOLS": "list-tools,describe-tool",
        "OAUTH_TOOL_SCOPES": "{\"list-properties\":[\"property:read\"],\"create-property\":[\"property:write\"],\"activate-property\":[\"property:activate\"]}",
        "MCP_AUTH_HEADER": "Bearer YOUR_OAUTH_TOKEN_HERE"
      }
    }
  }
}